@model List<Estoque.Domain.Entities.Notificacao>

@{
    var notificacoes = Model ?? new List<Estoque.Domain.Entities.Notificacao>();
}

@if (!notificacoes.Any())
{
    <div class="row justify-content-center align-items-center g-5">
        <div class="col-12 text-center">
            <p class="fs-6 mb-0">Nenhuma notificação nova</p>
        </div>
    </div>
}
else
{
    @foreach (var notificacao in notificacoes)
    {
        <div class="dropdown-item px-3 py-2">
            <div class="d-flex justify-content-between align-items-center">
                <div class="flex-grow-1">
                    <span class="fw-semibold">@notificacao.Mensagem</span>
                    <div class="small text-muted">@notificacao.Data.ToString("dd/MM/yyyy HH:mm")</div>
                </div>
            </div>
        </div>
    }
}
