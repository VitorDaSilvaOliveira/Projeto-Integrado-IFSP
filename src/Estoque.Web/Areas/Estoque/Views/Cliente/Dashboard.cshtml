@using Estoque.Lib.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<EstoqueResources> Localizer

@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["DashboardClientes"];
}

<h3 class="mt-3">
    <i class="fas fa-chart-line"></i> @Localizer["DashboardClientes"]
</h3>

<hr />

<div class="container mt-4">
    <div class="row" id="kpis">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Total de Clientes</h5>
                    <h2 id="totalClientes">--</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Ativos</h5>
                    <h2 id="ativos">--</h2>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-danger mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Inativos</h5>
                    <h2 id="inativos">--</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Clientes -->
    <h3 class="mt-5">Top Clientes por Pedidos</h3>

    <table class="table table-striped mt-3 shadow" id="tblTopClientes">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Qtd. Pedidos</th>
                <th>Total Gasto</th>
            </tr>
        </thead>
        <tbody>
            <tr><td colspan="3" class="text-center">Carregando...</td></tr>
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboardclientes.js" asp-append-version="true"></script>
}
