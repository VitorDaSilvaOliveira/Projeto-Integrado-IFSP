@using Estoque.Lib.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<EstoqueResources> Localizer

@model ResetPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = @Localizer["ResetPassword"];
    var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
}

<!DOCTYPE html>
<html data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/cosmo/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flag-icons/css/flag-icons.min.css">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
    <div style="position: absolute; top: 20px; left: 20px; display: flex; gap: 10px; align-items: center; z-index: 1000;">
        <input type="checkbox" class="btn-check" id="themeControlToggle" autocomplete="off" style="display: none;" />
        <label for="themeControlToggle" data-bs-toggle="tooltip" title="Mudar tema" style="cursor: pointer; font-size: 1.3rem; color: #ffc107;">
            <span class="fa-solid fa-sun sun-icon"></span>
        </label>
        <div class="dropdown">
            <button class="btn btn-sm dropdown-toggle" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <span class="fas fa-globe-americas"></span>
            </button>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                <form method="post" asp-area="Admin" asp-controller="Language" asp-action="SetLanguage" class="m-0 p-0">
                    <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                    <button type="submit" class="dropdown-item @(currentCulture == "pt-BR" ? "active" : "")" name="culture" value="pt-BR">
                        <span class="fi fi-br"></span> Brasil
                    </button>
                </form>
                <form method="post" asp-area="Admin" asp-controller="Language" asp-action="SetLanguage" class="m-0 p-0">
                    <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                    <button type="submit" class="dropdown-item @(currentCulture == "en-US" ? "active" : "")" name="culture" value="en-US">
                        <span class="fi fi-us"></span> United States
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="D-flex JC-center ALITEM-center HEIGHT-100vh">
        <div id="left-box" class="caixa-esquerda D-flex FD-column ALITEM-center HEIGHT-100vh">
            <div class="formulario-login D-flex FD-column JC-center ALITEM-center PADDING-B20 WIDTH-100">
                <div class="logo-container" style="margin-top: 150px;">
                    <img src="~/img/logo.png" alt="Logo" width="100" height="100" style="position: relative; top: -40px;" />
                </div>

                <h6 class="mb-4">@Localizer["ResetPassword"]</h6>

                <form asp-action="ResetPassword" method="post" class="w-100">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Nova Senha</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Salvar Nova Senha</button>
                    <a href="@Url.Action("Index", "SignIn", new { area = "Identity" })" class="mt-2 d-block">
                        Voltar ao Login
                    </a>
                </form>
            </div>
        </div>

        <!-- Imagem lateral -->
        <div id="right-box" class="caixa-direita">
            <img src="~/img/prateleiras-galpao.jpg" class="HEIGHT-100 WIDTH-100" style="opacity: 0.8;" alt="Imagem Galpão" />
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
    <partial name="_ScriptsPartial" />
</body>
</html>