    <form asp-area="Identity" asp-controller="Settings" asp-action="SaveSettings" method="post" class="row g-4">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />

        <!-- Preferências do Usuário -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white fw-bold">
                    <i class="bi bi-person-gear me-2"></i>Preferências do Usuário
                </div>
                <div class="card-body">
                    <div class="mb-3 p-3 bg-light rounded d-flex justify-content-between align-items-center">
                        <div>
                            <label class="form-check-label fw-semibold" asp-for="EnableLanguageSwitch">Mostrar ícone de idioma</label>
                        </div>
                        <input asp-for="EnableLanguageSwitch" type="checkbox" class="form-check-input" />
                    </div>

                    <div class="mb-3 p-3 bg-light rounded d-flex justify-content-between align-items-center">
                        <div>
                            <label class="form-check-label fw-semibold" asp-for="EnableDarkModeSwitch">Mostrar ícone de modo noturno</label>
                        </div>
                        <input asp-for="EnableDarkModeSwitch" type="checkbox" class="form-check-input" />
                    </div>

                    <div class="mb-3">
                        <label class="fw-semibold" asp-for="PreferredLanguage">Idioma padrão</label>
                        <select asp-for="PreferredLanguage" class="form-select">
                            <option value="pt-BR">Português (Brasil)</option>
                            <option value="en-US">Inglês (EUA)</option>
                            <option value="es-ES">Espanhol</option>
                        </select>
                    </div>

                    <div class="mb-3 p-3 bg-light rounded d-flex justify-content-between align-items-center">
                        <div>
                            <label class="form-check-label fw-semibold" asp-for="DarkMode">Ativar modo noturno por padrão</label>
                        </div>
                        <input asp-for="DarkMode" type="checkbox" class="form-check-input" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Configurações Gerais -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white fw-bold">
                    <i class="bi bi-sliders me-2"></i>Configurações Gerais
                </div>
                <div class="card-body">
                    <div class="mb-3 p-3 bg-light rounded">
                        <label class="fw-semibold">Tempo de cache (em minutos)</label>
                        <input type="number" class="form-control" placeholder="Ex: 30" disabled />
                        <small class="text-muted">Campo para futuras configurações globais</small>
                    </div>

                    <div class="mb-3 p-3 bg-light rounded">
                        <label class="fw-semibold">Outras Configurações</label>
                        <input type="text" class="form-control" placeholder="Ex: Configuração futura" disabled />
                        <small class="text-muted">Espaço reservado para novas opções</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 text-end mt-3">
            <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm">
                <i class="bi bi-save me-2"></i>Salvar Configurações
            </button>
        </div>
    </form>
    @await Html.PartialAsync("_Error")

    @await Html.PartialAsync("_Success")

</div>
