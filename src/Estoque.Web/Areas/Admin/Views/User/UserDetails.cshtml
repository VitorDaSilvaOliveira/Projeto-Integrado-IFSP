@model EditUserViewModel
@using Estoque.Domain.Enums
@using Estoque.Lib.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<EstoqueResources> Localizer
@{
    ViewData["Title"] = "Informações Pessoais";
    var defaultAvatar = Url.Content("~/img/default_profile.png");
}

<div class="border-bottom pb-2 mb-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "User", new { area = "Admin" })">
                    Gerenciador de Usuários
                </a>
            </li>
            <li class="breadcrumb-item">
                @Model.FirstName @Model.LastName
            </li>
            <li class="breadcrumb-item active">
                @ViewData["Title"]
            </li>
        </ol>
    </nav>
</div>

@await Html.PartialAsync("_UserTabs", Model)

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="UserDetails" role="tabpanel">
        <div class="container" style="max-width: 900px;">

            <!-- Avatar Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <div class="user-avatar mb-3" onclick="openFilePicker()">
                        <img src="/uploads/avatars/@Model.AvatarUrl"
                             onerror="this.onerror=null;this.src='@defaultAvatar';"
                             class="rounded-circle"
                             alt="Avatar"
                             style="width: 120px; height: 120px; object-fit: cover;" />
                    </div>
                    <h4 class="user-name mb-2">@Model.FirstName @Model.LastName</h4>
                    <div class="status mb-3">
                        @if (Model.Status == UserStatus.Inativo)
                        {
                            <span class="fa fa-circle text-danger me-1"></span>
                            <span class="fw-bold text-danger">@Model.Status</span>
                        }
                        else
                        {
                            <span class="fa fa-circle text-success me-1"></span>
                            <span class="fw-bold text-success">@Model.Status</span>
                        }
                    </div>
                    <a class="btn btn-secondary fw-bold mt-2"
                       href="@Url.Action("Impersonate", "User", new { area = "Admin", userId = Model.Id })">
                        <i class="fa fa-user-secret"></i> Impersonate
                    </a>
                </div>
            </div>

            <!-- Formulário Card -->
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="UserDetails" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome do Usuário <span class="required-symbol">*</span></label>
                                <input class="form-control" type="text" name="UserName" value="@Model.UserName" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email <span class="required-symbol">*</span></label>
                                <input class="form-control" type="email" name="Email" value="@Model.Email" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome <span class="required-symbol">*</span></label>
                                <input class="form-control" type="text" name="FirstName" value="@Model.FirstName" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Sobrenome <span class="required-symbol">*</span></label>
                                <input class="form-control" type="text" name="LastName" value="@Model.LastName" />
                            </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Número de Telefone
                                        <span class="fa fa-question-circle help-description"
                                              data-bs-toggle="tooltip"
                                              data-bs-html="true"
                                              aria-label="+55 99999-9999"
                                              data-bs-original-title="+55 99999-9999"></span>
                                    </label>
                                    <input class="form-control" type="text" name="PhoneNumber" value="@Model.PhoneNumber"
                                           maxlength="19" inputmode="text" />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Loja <span class="required-symbol">*</span></label>
                                    <input class="form-control" type="text" name="Loja" value="@Model.Loja" />
                                </div>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@await Html.PartialAsync("_Success")
