eneva, Verdana, sans-serif;\r\n        background-color: #f0f0f0; /* cinza claro neutro */\r\n        color: #111;\r\n        margin: 0;\r\n        padding: 20px;\r\n    }\r\n\r\n    h1 {\r\n        text-align: center;\r\n        color: #333;\r\n        margin-bottom: 30px;\r\n        font-size: 1.8em;\r\n    }\r\n\r\n    /* Card de cada pedido */\r\n    .pedido-card {\r\n        background-color: #fff;\r\n        border-left: 8px solid #FFC107; /* destaque amarelo */\r\n        border-radius: 10px;\r\n        padding: 30px;\r\n        margin-bottom: 30px;\r\n        box-shadow: 0 6px 15px rgba(0,0,0,0.2);\r\n        min-height: 400px; /* aumento da altura m\u00EDnima */\r\n        display: flex;\r\n        flex-direction: column;\r\n        justify-content: flex-start; /* manter conte\u00FAdo do topo */\r\n        overflow: hidden;\r\n    }\r\n\r\n    /* Cabe\u00E7alho do pedido */\r\n    .pedido-header {\r\n        display: flex;\r\n        justify-content: space-between;\r\n        margin-bottom: 25px;\r\n        font-weight: bold;\r\n        font-size: 1.2em;\r\n        color: #222;\r\n    }\r\n\r\n    .pedido-header span {\r\n        color: #FFC107;\r\n    }\r\n\r\n    /* Corpo do pedido */\r\n    .pedido-body {\r\n        display: grid;\r\n        grid-template-columns: 1fr 1fr;\r\n        gap: 20px 30px;           /* mais espa\u00E7o vertical e horizontal */\r\n        color: #333;\r\n        font-size: 1em;\r\n        padding-bottom: 20px;      /* mais espa\u00E7o inferior */\r\n        grid-auto-rows: minmax(40px, auto); /* cada linha pelo menos 40px */\r\n    }\r\n\r\n    .pedido-body div {\r\n        margin-bottom: 12px;\r\n    }\r\n\r\n    /* Status */\r\n    .status {\r\n        font-weight: bold;\r\n        padding: 5px 12px;  /* mais padding vertical */\r\n        border-radius: 6px;\r\n        display: inline-block;\r\n        font-size: 0.95em;\r\n    }\r\n\r\n    .status-0 { background-color: #FFEB3B; color: #111; }  /* Em andamento */\r\n    .status-1 { background-color: #4CAF50; color: #fff; }  /* Realizado */\r\n    .status-2 { background-color: #F44336; color: #fff; }  /* Cancelado */\r\n\r\n    /* Ajustes para modal */\r\n    .modal-body {\r\n        max-height: 80vh; /* altura m\u00E1xima do modal */\r\n        overflow-y: auto;  /* scroll se passar do limite */\r\n    }\r\n\r\n    /* Para impress\u00E3o / PDF */\r\n    @media print {\r\n        body {\r\n            background-color: #fff;\r\n            color: #111;\r\n            margin: 0;\r\n            padding: 0;\r\n        }\r\n        .pedido-card {\r\n            box-shadow: none;\r\n            border: 1px solid #ccc;\r\n            page-break-inside: avoid;\r\n            margin-bottom: 20px;\r\n        }\r\n    }\r\n\u003C/style\u003E\r\n\r\n\r\n\u003Cbody\u003E\r\n\u003Cdiv class=\u0022modal-body\u0022\u003E\r\n\u003Ch1\u003ERelat\u00F3rio de Estoque de Pedidos\u003C/h1\u003E\r\n\r\n{% for i in (0..DataSource[0].length-1) %}\r\n\u003Cdiv class=\u0022pedido-card\u0022\u003E\r\n    \u003Cdiv class=\u0022pedido-header\u0022\u003E\r\n        \u003Cdiv\u003EPedido: \u003Cspan\u003E{{ DataSource[0][i].NumeroPedido }}\u003C/span\u003E\u003C/div\u003E\r\n        \u003Cdiv\u003EData: \u003Cspan\u003E{{ formatDate(DataSource[0][i].DataPedido,\u0022dd/MM/yyyy\u0022) }}\u003C/span\u003E\u003C/div\u003E\r\n    \u003C/div\u003E\r\n\r\n    \u003Cdiv class=\u0022pedido-body\u0022\u003E\r\n        \u003Cdiv\u003ECliente: \u003Cspan\u003E{{ DataSource[0][i].Cliente_Id }}\u003C/span\u003E\u003C/div\u003E\r\n        \u003Cdiv\u003EProduto: \u003Cspan\u003E{{ DataSource[0][i].Produto }}\u003C/span\u003E\u003C/div\u003E\r\n        \u003Cdiv\u003EPre\u00E7o Venda: \u003Cspan\u003E{{ DataSource[0][i].PrecoVenda | string_format:\u0022C\u0022 }}\u003C/span\u003E\u003C/div\u003E\r\n        \u003Cdiv\u003EStatus: \r\n            {% case DataSource[0][i].Status %}\r\n                {% when 0 %}\u003Cspan class=\u0022status status-0\u0022\u003EEm andamento\u003C/span\